@model AppointmentEditViewModel

<h2>Chỉnh sửa Cuộc Hẹn</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Appointment.Id" />

    <label asp-for="Appointment.Name"></label>
    <input asp-for="Appointment.Name" class="form-control" />

    <label asp-for="Appointment.Location"></label>
    <input asp-for="Appointment.Location" class="form-control" />

    <label asp-for="Appointment.StartTime"></label>
    <input asp-for="Appointment.StartTime" type="datetime-local" class="form-control" />

    <label asp-for="Appointment.EndTime"></label>
    <input asp-for="Appointment.EndTime" type="datetime-local" class="form-control" />

    <label>Thêm người tham gia mới (Email, cách nhau bởi dấu phẩy):</label>
    <input asp-for="EnteredEmails" class="form-control" />

    <div class="mt-3">
        <strong>Người đang tham gia:</strong>
        <ul>
            @foreach (var email in Model.CurrentParticipantEmails)
            {
                <li>@email</li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
