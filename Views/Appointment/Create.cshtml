@model QL_Lichcanhan.Models.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Tạo Cuộc Hẹn";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="mt-3">

    <div class="mb-3">
        <label asp-for="Appointment.Name" class="form-label"></label>
        <input asp-for="Appointment.Name" class="form-control" />
        <span asp-validation-for="Appointment.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.Location" class="form-label"></label>
        <input asp-for="Appointment.Location" class="form-control" />
        <span asp-validation-for="Appointment.Location" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.StartTime" class="form-label"></label>
        <input asp-for="Appointment.StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.EndTime" class="form-label"></label>
        <input asp-for="Appointment.EndTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="Appointment.EndTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Appointment.Note" class="form-label">Ghi chú (tuỳ chọn)</label>
        <textarea asp-for="Appointment.Note" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label for="EnteredEmails" class="form-label">Thêm email người tham gia (cách nhau bởi dấu phẩy):</label>
        <textarea asp-for="EnteredEmails" class="form-control" rows="2" placeholder="vd: user1@gmail.com, user2@example.com"></textarea>
    </div>

    @* Hiển thị cảnh báo xung đột nhóm *@
    @if (ViewBag.ConflictMessage != null)
    {
        <div class="alert alert-warning">@ViewBag.ConflictMessage</div>

        <button type="submit" name="ForceSave" value="true" class="btn btn-danger">
            Không tham gia nhóm (vẫn lưu)
        </button>
        <a asp-action="Index" class="btn btn-secondary">Về Trang Chủ</a>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Tạo cuộc hẹn</button>
        <a asp-action="Index" class="btn btn-secondary">Về Trang Chủ</a>
    }

</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
